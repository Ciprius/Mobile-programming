<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="340dp"
                android:layout_height="300dp" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray">

    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Type"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/TypeBox"/>
    <EditText
            android:id="@+id/NameBoxProj"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/TypeBox"
            android:layout_marginTop="10dp"/>
    <EditText
            android:id="@+id/CaliberBox"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Caliber"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/NameBoxProj"
            android:layout_marginTop="10dp" android:inputType="numberDecimal"/>
    <EditText
            android:id="@+id/NumberBoxProj"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/CaliberBox"
            android:layout_marginTop="10dp" android:inputType="numberDecimal"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/NumberBoxProj"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginTop="10sp">
        <android.support.design.button.MaterialButton
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:id="@+id/CancelProjectileBtn"
                android:text="Cancel"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="20sp"
                app:rippleColor="@color/colorPrimary"/>
        <android.support.design.button.MaterialButton
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:id="@+id/ProjectileBtn"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="20sp"
                app:rippleColor="@color/colorPrimary"/>
    </LinearLayout>
</RelativeLayout>