<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray">

    <android.support.design.button.MaterialButton
            android:id="@+id/exit_btn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="X"
            app:backgroundTint="@android:color/black"
            app:rippleColor="@android:color/white"
            app:cornerRadius="20sp"/>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Settings"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:enabled="false"
            android:textColor="@android:color/black"/>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/background"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/settings"
            android:text="Background"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:enabled="false"
            android:textColor="@android:color/black"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/holo_blue_bright_btn"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            app:backgroundTint="@android:color/holo_blue_bright"
            app:rippleColor="@android:color/black"
            app:cornerRadius="20sp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="@android:color/black"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/holo_orange_light_btn"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            app:backgroundTint="@android:color/holo_orange_light"
            app:rippleColor="@android:color/black"
            app:cornerRadius="20sp"
            android:layout_toEndOf="@id/holo_blue_bright_btn"
            android:layout_toRightOf="@id/holo_blue_bright_btn"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="@android:color/black"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/holo_blue_dark_btn"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:cornerRadius="20sp"
            app:rippleColor="@android:color/black"
            android:layout_toEndOf="@id/holo_orange_light_btn"
            android:layout_toRightOf="@id/holo_orange_light_btn"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="@android:color/black"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/holo_orange_dark_btn"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            app:backgroundTint="@android:color/holo_orange_dark"
            app:rippleColor="@android:color/black"
            app:cornerRadius="20sp"
            android:layout_toEndOf="@id/holo_blue_dark_btn"
            android:layout_toRightOf="@id/holo_blue_dark_btn"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="@android:color/black"/>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/default_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/holo_blue_dark_btn"
            android:text="Default"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:enabled="false"
            android:textColor="@android:color/black"/>

    <android.support.design.button.MaterialButton
            android:id="@+id/default_btn"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            app:backgroundTint="@android:color/white"
            app:rippleColor="@android:color/black"
            app:cornerRadius="20sp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="@android:color/black"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_btn"
            android:gravity="center"
            android:orientation="vertical">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/animation"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Animations"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:enabled="false"
                android:textColor="@android:color/black"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center">

            <android.support.design.button.MaterialButton
                    android:id="@+id/fade_in_btn"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="Fade In"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    android:layout_marginRight="10sp"
                    app:cornerRadius="20sp"
                    app:rippleColor="@android:color/black"
                    app:iconTint="@android:color/black"
                    android:layout_marginEnd="10sp"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/slide_left_btn"
                    android:layout_width="110sp"
                    android:layout_height="wrap_content"
                    android:text="Slide Left"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    app:cornerRadius="20sp"
                    app:rippleColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>