<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="340dp"
                android:layout_height="350dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray">


    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Tank name"
            android:textStyle="bold"
            android:id="@+id/NameBox"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType = "numberDecimal"
            android:hint="Gun"
            android:textStyle="bold"
            android:id="@+id/GunBox"
            android:gravity="center"
            android:layout_below="@+id/NameBox"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType = "numberDecimal"
            android:hint="Weight"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/WeightsBox"
            android:layout_below="@+id/GunBox"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:id="@+id/NumberBox"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType = "numberDecimal"
            android:hint="Number of Tanks"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/WeightsBox"
            android:layout_marginTop="10dp"
            android:gravity="center"/>
    <EditText
            android:id="@+id/CountryBox"
            android:inputType="textPersonName"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NumberBox"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:hint="Country"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/CountryBox"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginTop="10sp">
        <android.support.design.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/CancelTankBtn"
                android:text="Cancel"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="20sp"
                app:rippleColor="@color/colorPrimary"/>

        <android.support.design.button.MaterialButton
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:id="@+id/TankBtn"
                android:layout_marginLeft="10sp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="20sp"
                app:rippleColor="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>