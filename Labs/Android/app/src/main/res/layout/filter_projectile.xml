<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="340dp"
                android:layout_height="280dp" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray">
    <TextView
            android:id="@+id/filterProjectile"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Filter Projectile"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
    />

    <android.support.design.widget.TextInputEditText
            android:id="@+id/filterType"
            android:layout_width="220sp"
            android:layout_height="45sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/filterProjectile"
            android:layout_marginTop="10sp"
            android:hint="Type"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"/>

    <android.support.design.widget.TextInputEditText
            android:id="@+id/filterCaliber"
            android:layout_width="220sp"
            android:layout_height="45sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/filterType"
            android:layout_marginTop="10sp"
            android:hint="Caliber"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp" android:inputType="numberDecimal"/>
    <android.support.design.widget.TextInputEditText
            android:id="@+id/filterNumberProjectile"
            android:layout_width="220sp"
            android:layout_height="45sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/filterCaliber"
            android:layout_marginTop="10sp"
            android:hint="Number"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp" android:inputType="numberDecimal"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/filterNumberProjectile"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_marginTop="10sp">
        <android.support.design.button.MaterialButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/CancelFilterProjectileBtn"
                android:text="Cancel"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="20sp"
                app:rippleColor="@color/colorPrimary"/>
        <android.support.design.button.MaterialButton
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:id="@+id/FilterProjectileBtn"
                android:layout_marginLeft="10sp"
                android:text="Filter"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_orange_light"
                app:cornerRadius="20sp"
                app:rippleColor="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>